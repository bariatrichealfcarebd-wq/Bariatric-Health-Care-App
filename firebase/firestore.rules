rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /Paciente/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.uid;
      allow write: if true;
      allow delete: if request.auth != null;
    }

    match /Nutrientes/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /sintomas/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /ligacao_sintoma/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.cpf_usuario;
      allow write: if false;
      allow delete: if request.auth != null;
    }

    match /suplementacao/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.id_User;
      allow write: if false;
      allow delete: if request.auth != null;
    }

    match /Suplementacaodiaria/{document} {
