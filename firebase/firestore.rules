      allow delete: if request.auth != null;
    }

    match /photos/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if false;
      allow delete: if request.auth != null;
    }

    match /relatorios_Questionario/{document} {
      allow create: if request.auth != null;
